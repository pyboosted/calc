{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "extends": ["./node_modules/ultracite/biome.jsonc"],
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 30
          }
        }
      }
    }
  }
}
